<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:editTextStyle">@style/AppTheme.EditTextStyle</item>
        <item name="android:textViewStyle">@style/AppTheme.TextViewStyle</item>
        <item name="android:tabWidgetStyle">@android:style/Widget.TabWidget</item>
        <item name="android:radioButtonStyle">@style/AppTheme.RadioButtonStyle</item>
        <item name="android:checkboxStyle">@style/AppTheme.CheckBoxStyle</item>
        <item name="android:buttonStyle">@style/AppTheme.ButtonStyle</item>
        <item name="android:dialogTheme">@style/AppTheme.DialogTheme</item>
        <item name="android:spinnerStyle">@style/AppTheme.SpinnerStyle</item>
        <item name="alertDialogTheme">@style/AppTheme.AlertDialogTheme</item>
    </style>

    <style name="AppTheme.Login" parent="AppTheme">
        <item name="android:editTextStyle">@style/AppTheme.Login.EditTextStyle</item>
    </style>


    <style name="AppTheme.EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:background">@drawable/border_edittext_grey_lightgreen100_selector</item>
        <item name="android:paddingLeft">@dimen/row_text_padding</item>
        <item name="android:paddingRight">@dimen/row_text_padding</item>
        <item name="android:textCursorDrawable">@color/lightGreen100</item>
    </style>

    <style name="AppTheme.Login.EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:paddingLeft">@dimen/row_text_padding</item>
        <item name="android:paddingRight">@dimen/row_text_padding</item>
        <item name="android:textCursorDrawable">@color/white</item>
    </style>

    <style name="AppTheme.TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorLink">@color/lightGreen100</item>
    </style>

    <style name="AppTheme.ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">@color/lightGreen100</item>
        <item name="colorControlHighlight">@color/lightGreen100</item>
        <item name="android:colorPressedHighlight">@color/lightGreen100</item>
        <item name="colorPrimaryDark">@color/lightGreen100</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/lightGreen100</item>
        <item name="colorControlActivated">@color/lightGreen100</item>
        <item name="buttonTint">@color/lightGreen100</item>
    </style>

    <style name="AppTheme.CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorAccent">@color/lightGreen100</item>
        <item name="colorControlHighlight">@color/lightGreen100</item>
        <item name="android:colorPressedHighlight">@color/lightGreen100</item>
        <item name="colorPrimaryDark">@color/lightGreen100</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/lightGreen100</item>
        <item name="colorControlActivated">@color/lightGreen100</item>
        <item name="buttonTint">@color/lightGreen100</item>
    </style>

    <style name="AppTheme.DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:progressDrawable">@drawable/progressbar_lightgreen100</item>
        <item name="buttonBarNegativeButtonStyle">
            @style/AppTheme.AlertDialogTheme.NegativeButtonStyle
        </item>
        <item name="buttonBarPositiveButtonStyle">
            @style/AppTheme.AlertDialogTheme.PositiveButtonStyle
        </item>
    </style>

    <style name="AppTheme.AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonBarNegativeButtonStyle">
            @style/AppTheme.AlertDialogTheme.NegativeButtonStyle
        </item>
        <item name="buttonBarPositiveButtonStyle">
            @style/AppTheme.AlertDialogTheme.PositiveButtonStyle
        </item>
    </style>

    <style name="AppTheme.AlertDialogTheme.NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AlertDialogTheme.PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.CalculateInsuranceStyle" parent="AppTheme">
        <item name="android:windowAnimationStyle">
            @style/AppTheme.CalculateInsuranceStyle.ActivityTransition
        </item>
    </style>

    <style name="AppTheme.CalculateInsuranceStyle.ActivityTransition" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/translate_down_to_start</item>
        <item name="android:activityOpenExitAnimation">@anim/translate_start_to_bottom</item>
        <item name="android:activityCloseEnterAnimation">@anim/translate_bottom_to_start</item>
        <item name="android:activityCloseExitAnimation">@anim/translate_start_to_down</item>
    </style>

    <style name="AppTheme.SpinnerStyle" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:minHeight">@dimen/btn_medium_height</item>
    </style>

</resources>
