<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/AppTheme.TextViewStyle</item>
    </style>

    <style name="AppTheme.TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorLink">@color/lightGreen100</item>
    </style>

</resources>
